@{
  Layout = "_Layout";
}
@model PIerresTreats.Models;
<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="card-header">
        <h1>Check out our flavors!</h1>
      </div>
      @if (Model.Count == 0)
      {
        <center>
          <h2>Add some flavors! You don't have any!</h2>
        </center>
      }

      @foreach (Flavor flavor in Model)
      {
        <h2>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</h2>
      }
      <button id="button" type="button" class="btn btn-success">@Html.ActionLink("Add a flavor", "Create")</button>
      <button id="button" type="button" class="btn btn-success">@Html.ActionLink("Home", "Index", "Home")</button>
    </div>
  </div>
</div>