@{
  Layout = "_Layout";
}
@model PierresTreats.Models.Flavor
<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="card-header">
        <h1>Check out these flavors!</h1>
      </div>
      @if (Model.JoinEntities.Count == 0)
      {
        <h2>Yikes, looks like we don't have @Html.DisplayFor(model => model.Type) treats.</h2>
      }
      else
      {
        <h2>Our selections of @Html.DisplayFor(model => model.Type) treats:</h2>
        @foreach (var join in Model.JoinEntities)
        {
          <h2>@join.Treat.Name</h2>
        }
      }
      <button id="button" type="button" class="btn btn-success">@Html.ActionLink("Edit flavor", "Edit", new { id =
        Model.FlavorId})</button>
      <button id="button" type="button" class="btn btn-success">@Html.ActionLink("Delete flavor", "Delete", new { id =
        Model.FlavorId})</button>
      <button id="button" type="button" class="btn btn-success">@Html.ActionLink("Flavor List", "Index")</button>