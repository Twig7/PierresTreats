@{
  Layout = "_Layout";
}
@model PierresTreats.Models.Flavor
<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="card-header">
        <h1>Edit flavor?</h1>
      </div>
      <h3>Edit this flavor: @Html.DisplayFor(model => model.Type)</h3>
      <br>
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.FlavorId)
        @Html.LabelFor(model => model.Type)
        @Html.EditorFor(model => model.Type, new { @required = "required"})
        <input type="submit" value="Save" />
      }
      <button id="button" type="button" class="btn btn-success">@Html.ActionLink("Flavor List", "Index")</button>
    </div>
  </div>
</div>