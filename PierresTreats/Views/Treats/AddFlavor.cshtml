@{
  Layout = "_Layout";
}
@model PierresTreats.Models.Treat
<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="card-header">
        <h1>Add a new flavor!</h1>
      </div>
      <h4>Add a flavor to this treat:</h4>
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.TreatId)
        @Html.Label("Select flavor")
        @Html.DropDownList("FlavorId")
        <input id="button" class="btn btn-success" type="submit" value="Save" />
      }
      <button id="button" type="button" class="btn btn-success">@Html.ActionLink("Back to treat list", "Index")</button>
    </div>
  </div>
</div>